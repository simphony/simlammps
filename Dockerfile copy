FROM lammps/lammps
LABEL maintainer="pablo.de.andres@fraunhofer.iwm.de"

RUN pip install --upgrade pip
# Install osp-core
RUN pip install osp-core

# Install simlammps
WORKDIR /simphony/wrappers/simlammps
ADD . .
RUN pip install .
